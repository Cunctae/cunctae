---
import Footer from "@components/Footer.astro";
import Navigation from "@components/Navigation.astro";
import MainHead from "@components/MainHead.astro";

export interface Props {
    title?: string;
    isLandingPage?: boolean;
}

const { isLandingPage, title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <MainHead title={title} />
    </head>
    <body>
        {isLandingPage && <Navigation />}
        <slot />
        {isLandingPage && <Footer />}
        <script>
            // Add “loaded” class once the document has completely loaded.
            addEventListener("load", () =>
                document.documentElement.classList.add("loaded")
            );
        </script>
        <style is:global>
            :root {
                --carmine: #a30015;
                --deep-champagne: #f1d7a0;
                --russian-violet: #2c0043;
                --light-taupe: #a9996f;
            }
            html {
                margin: 0;
                padding: 0;
                background-color: var(--bg-color);
            }

            body {
                margin: 0;
            }

            h1,
            h2,
            h3,
            h4,
            h5,
            h6,
            p,
            span,
            a {
                margin: 0;
                line-height: 90%;
                font-family:
                    system-ui,
                    -apple-system,
                    BlinkMacSystemFont,
                    "Segoe UI",
                    Roboto,
                    Oxygen,
                    Ubuntu,
                    Cantarell,
                    "Open Sans",
                    "Helvetica Neue",
                    sans-serif;
                font-weight: 200;
            }
        </style>
    </body>
</html>
