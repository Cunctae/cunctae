---
interface Props {
    title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta
            name="Cunctae"
            content="This is a collective that tries to undertand the meaning of all."
        />
        <meta
            name="keywords"
            content="all, cunctae, latin, collective, art, life"
        />
        <link rel="icon" type="image/x-icon" href="/c.svg" />
        <title>{title}</title>
    </head>
    <body>
        <slot />
    </body>
</html>
<style is:global>
    :root {
        --carmine: #a30015;
        --deep-champagne: #f1d7a0;
        --russian-violet: #2c0043;
        --light-taupe: #a9996f;
    }
    html {
        margin: 0;
        padding: 0;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background-color: var(--light-taupe);
    }
</style>
