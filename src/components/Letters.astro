---
import { letters } from "@data/letters";
interface Props {
    alt: string;
}

const { alt } = Astro.props;
---

<section class="letters">
    {
        letters.map((img) => (
            <img src={img.src} alt={alt} id={img.id} draggable="false"/>
        ))
    }
</section>

<style>
    .letters {
        height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 1rem;
        cursor: pointer;
    }

    .letters img {
        height: 6.25rem;
    }

    @media (width <= 600px) {
        .letters img {
            height: 2.5rem;
        }
    }

    .letters #c {
        width: 8.125rem;
        animation: float-up 5s infinite;
    }

    @media (width <= 600px) {
        .letters #c {
            width: 3.75rem;
        }
    }

    .letters #u {
        animation: float-down 5s infinite;
    }
    .letters #n {
        animation: float-up 5s infinite;
    }
    .letters #c1 {
        animation: float-down 5s infinite;
    }
    .letters #t {
        animation: float-up 5s infinite;
    }
    .letters #a {
        animation: float-down 5s infinite;
    }
    .letters #e {
        animation: float-up 5s infinite;
    }

    @keyframes float-up {
        0% {
            transform: translatey(0rem);
        }
        50% {
            transform: translatey(-0.5rem);
        }
        100% {
            transform: translatey(0rem);
        }
    }

    @keyframes float-down {
        0% {
            transform: translatey(0rem);
        }
        50% {
            transform: translatey(0.5rem);
        }
        100% {
            transform: translatey(0rem);
        }
    }
</style>
