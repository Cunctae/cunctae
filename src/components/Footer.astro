---
import { Icon } from "astro-icon/components";
import type FooterLink from 'src/types/footer';

const links: Array<FooterLink> = [
    {
        url: "https://www.instagram.com/cunctae/",
        description: "Cunctae on instagram",
        icon: "mdi:instagram",
    },
    {
        url: "mailto:cunctae@gmail.com?subject=Something in mind",
        description: "Contact us",
        icon: "mdi:gmail",
    },
];
---

<footer>
    <section id="links">
        <ul>
            {
                links.map((link) => (
                    <li>
                        <a href={link.url} target="_blank">
                            <Icon
                                width={30}
                                height={30}
                                name={link.icon}
                                title={link.description}
                            />
                        </a>
                    </li>
                ))
            }
        </ul>
    </section>
    <h6>Cunctae {new Date().getFullYear()}</h6>
</footer>

<style>
    footer {
        background-color: var(--carmine);
        width: 100%;
        position: fixed;
        bottom: 0;
        padding: 2rem 0;
    }
    #links {
        display: flex;
        justify-content: center;
        align-items: center;
    }

    ul {
        display: flex;
        align-items: center;
        justify-items: center;
        list-style: none;
        margin: 0;
        padding: 0;
        gap: 1rem;
    }

    a {
        color: white;
    }

    h6 {
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: 800;
    }
</style>