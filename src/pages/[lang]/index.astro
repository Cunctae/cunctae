---
import BackgroundGallery from '@components/BackgroundGallery.astro';
import BaseLayout from '@layouts/BaseLayout.astro';
import { LOCALES } from 'src/i18n';
import CardGallery from 'src/sections/CardGallery.astro';

export const getStaticPaths = () =>
	Object.keys(LOCALES).map((lang) => ({
		params: { lang },
	}));
---

<BaseLayout>
	<BackgroundGallery transition:persist/>
	<CardGallery/>
</BaseLayout>

